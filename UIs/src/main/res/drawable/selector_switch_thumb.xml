<?xml version="1.0" encoding="utf-8"?>
<!-- IOS风格Switch-实现方法2-滑块所用资源 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 滑块颜色 -->
    <solid android:color="#fbfcfb" />

    <!-- 滑块角半径 -->
    <corners android:radius="12dp" />

    <!-- 滑块周围设置透明边，使看起来像滑块在轨道内滑动（轨道和滑块之间有缝隙） -->
    <stroke
        android:width="2dp"
        android:color="#00000000" />

    <!-- 滑块宽度决定整个Switch控件的宽度（控件宽度≈滑块宽度*2）
         滑块高度决定整个Switch控件的高度（控件高度=滑块高度） -->
    <size
        android:width="24dp"
        android:height="24dp" />
</shape>